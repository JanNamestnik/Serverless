<a href="/events/list" class="accept-btn">Back to events</a>
    <div class="event">
        <img src="{{event.eventImage}}" alt="{{event.name}}" width="200">
        <h2>{{event.name}}</h2>
        <p>{{event.date}}</p>
        <p>{{event.venue}}</p>
        <p>{{event.address}}</p>
        <p>{{event.startTime}} - {{event.endTime}}</p>
        <p>{{event.description}}</p>
        <p>{{event.contact}}</p>
        <p>{{event.category}}</p>
        <p>{{event.latitude}}, {{event.longitude}}</p>
        <p>{{event.attendees.length}}</p>
    </div>

    <a href="/events/showEvent/attend/{{event._id}}" class="attend-btn">Attend</a>

<h2>Reviews:</h2>
<hr>
{{#each reviews}}
    <div class="review">
        <p>{{this.rating}}</p>
        <p>{{this.content}}</p>
        <p>{{this.userId.username}}</p>
        <img src="{{this.userId.profileImage}}" alt="Profilna slika" style="width: 100px; height: 100px; border-radius:50%">
        <hr>
    </div>
{{/each}}

<h2>Add review: </h2>
<form action="/reviews" method="post">
    <input type="hidden" name="eventId" value="{{event._id}}">
    <input type="number" name="rating" placeholder="Rating" required>
    <textarea name="content" placeholder="content" required></textarea>
    <button type="submit" class="submit-btn">Submit</button>
</form>